<p id="notice"><%= notice %></p>

<h1>Films</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
        <h4 style="text-decoration:underline"><%= film.title %></h4>
        <h4>Released: <%= film.released %></h4>
        <h4>IMDB Rating: <%= film.imdb_rating%></h4>
        <p><%= link_to 'Show', film %>
        <%= link_to 'Edit', edit_film_path(film) %>
        <%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Film', new_film_path %>
